@page
@model EmployeeManagement.Pages.Employees.DetailsModel

@{
    ViewData["Title"] = "Detalles del Empleado";
}

<div class="container">
    <h2>Detalles del Empleado</h2>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-12">
            <div class="card p-4">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <dl class="row">
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Employee.Name)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Employee.Name)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Employee.Email)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Employee.Email)
                            </dd>
                        </dl>
                    </div>

                    <div class="col-md-6 mb-3">
                        <dl class="row">
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Employee.Area)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Employee.Area)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Employee.HireDate)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Employee.HireDate)
                            </dd>
                        </dl>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 mb-3">
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Employee.IsActive)
                            </dt>
                            <dd class="col-sm-10">
                                @(Model.Employee.IsActive ? "Sí" : "No")
                            </dd>
                        </dl>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4 gap-2">
                    <a asp-page="./Edit" asp-route-id="@Model.Employee.Id"
                       class="btn btn-primary"
                       style="padding: 0.375rem 0.75rem; font-size: 0.925rem;">
                        Editar
                    </a>
                    <a asp-page="./Index" class="btn btn-outline-secondary"
                       style="padding: 0.375rem 0.75rem; font-size: 0.925rem;"
                       title="Volver a la lista">
                        Atrás
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>